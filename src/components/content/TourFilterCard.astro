---
import { Image } from "astro:assets";

interface Props {
  title: string;
  price: string;
  duration?: string;
  image?: string;
  alt?: string;
  className?: string;
  tourSlug?: string;
  locale?: string;
}

const {
  title,
  price,
  duration = "3 Days",
  image,
  alt,
  className = "",
  tourSlug,
  locale = "ru",
} = Astro.props;
---

<div
  class={`relative overflow-hidden rounded-lg group cursor-pointer transition-transform duration-300 hover:scale-105 ${className}`}
>
  <!-- Background Image -->
  <div class="relative h-80 w-full">
    <Image
      src={image}
      alt={alt || title}
      width={400}
      height={320}
      class="w-full h-full object-cover"
      loading="lazy"
    />

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-foreground/65 to-transparent"
    >
    </div>

    <!-- Content Overlay -->
    <div class="absolute bottom-0 left-0 right-0 p-6 text-primary-foreground">
      <!-- Title -->
      <h3 class="text-xl font-bold mb-2 leading-tight">
        {title}
      </h3>

      <!-- Price and Duration -->
      <div class="flex items-center justify-between mb-4">
        <div class="text-lg font-semibold">
          {price}
        </div>
        {duration && <div class="text-sm opacity-90">{duration}</div>}
      </div>

      <!-- More Details Button -->
      <a
        href={tourSlug ? `/${locale}/tour/${tourSlug}` : "#"}
        class="w-full py-2 px-4 bg-primary-foreground/20 backdrop-blur-sm border border-primary-foreground/30 rounded text-primary-foreground text-sm font-medium transition-all duration-200 hover:bg-primary-foreground/30 hover:border-primary-foreground/50 block text-center"
      >
        Подробнее
      </a>
    </div>
  </div>
</div>
