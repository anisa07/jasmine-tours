---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  title: string;
  price: string;
  duration?: string;
  image?: ImageMetadata;
  alt?: string;
  className?: string;
  tourSlug?: string;
  locale?: string;
  description?: string;
}

const {
  title,
  price,
  duration = "3 Days",
  image,
  alt,
  className = "",
  tourSlug,
  locale = "ru",
  description = "",
} = Astro.props;
---

<div
  class={`relative overflow-hidden rounded-lg group cursor-pointer transition-transform duration-300 hover:scale-105 ${className}`}
>
  <!-- Background Image -->
  <div class="relative h-80 w-full">
    {
      image && (
        <Image
          src={image}
          alt={alt || title}
          width={400}
          height={320}
          class="w-full h-full object-cover"
          loading="lazy"
        />
      )
    }

    <!-- Gradient Overlay -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-foreground/65 to-transparent"
    >
    </div>

    <!-- Content Overlay -->
    <div class="absolute bottom-0 left-0 right-0 p-6 text-primary-foreground">
      <!-- Title -->
      <h3 class="text-xl font-bold mb-2 leading-tight">
        {title}
      </h3>

      <!-- Price and Duration -->
      <div class="flex items-center justify-between mb-4">
        <div class="text-lg font-semibold">
          {price}
        </div>
        {duration && <div class="text-sm opacity-90">{duration}</div>}
      </div>

      <!-- More Details Button -->
      <button
        class="tour-details-btn w-full py-2 px-4 bg-primary-foreground/20 backdrop-blur-sm border border-primary-foreground/30 rounded text-primary-foreground text-sm font-medium transition-all duration-200 hover:bg-primary-foreground/30 hover:border-primary-foreground/50"
        data-tour-title={title}
        data-tour-price={price}
        data-tour-duration={duration}
        data-tour-description={description}
        data-tour-image={image}
        data-tour-alt={alt}
      >
        Подробнее
      </button>
    </div>
  </div>
</div>
