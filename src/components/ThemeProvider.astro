---
import { getEntry } from "astro:content";

// Get theme color from hero content
const heroEntry = await getEntry("hero", "hero");
const themeColor = heroEntry?.data?.themeColor || 200;

// Generate dynamic CSS
const dynamicCSS = `:root { --brand-h: ${themeColor}; }`;
---

<style is:global set:html={dynamicCSS}></style>
