---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import ExcursionsContent from "../components/ExcursionsContent.jsx";
---

<Layout
  title="Экскурсии по Амстердаму и Нидерландам | Jasmine Tours"
  description="Индивидуальные и групповые экскурсии по Амстердаму, Роттердаму, Гааге, Делфту. Велосипедные прогулки, музеи, парки цветов и многое другое."
>
  <Navbar />
  <main class="excursions-page">
    <ExcursionsContent client:load />
  </main>
  <Footer />
</Layout>

<style>
  .excursions-page {
    background-color: #e1f3f8;
    min-height: 100vh;
    padding: 2em 0 3em;
  }

  @media (max-width: 768px) {
    .excursions-page {
      padding: 1.5em 0 2em;
    }
  }
</style>
