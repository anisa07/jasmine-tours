  <!-- Hero Section -->
  <section class="relative pt-20">
    <Hero
      variant="split"
      subtitle="LET'S GO HOLIDAY"
      title="Discover Your Best Trip!"
      description="Much of beautiful and refreshing places as you need to satisfy your best trip and make an amazing experience. Go explore our Packages."
    />
  </section>

  <!-- Tour Filter Panel Section -->
