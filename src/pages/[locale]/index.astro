---
import IntlBaseLayout from "@/layouts/IntlBaseLayout.astro";
import { getPageTranslations, getLocaleStaticPaths } from "@/i18n/i18n";
import type { Locale } from "@/i18n/config";
import { getEntry } from "astro:content";

// Layout components
import Container from "@/components/layout/Container.astro";

// Icons
import { MessageCircle, Instagram } from "@lucide/astro";

// Content components
import Hero from "@/components/content/Hero.astro";
import CallToAction from "@/components/content/CallToAction.astro";
import TourFilter from "@/components/content/TourFilter.astro";
import Testemonials from "@/components/content/Testemonials.astro";
import ImageGallery from "@/components/ImageGallery.astro";

// Generate static paths for all supported locales
export async function getStaticPaths() {
  return getLocaleStaticPaths();
}

// Get locale from dynamic route params
const { locale } = Astro.params;

// Get the translation function for this page
const { t } = await getPageTranslations(locale as Locale, [
  "common",
  "ui",
  "home",
]);

// Load hero content from CMS
const heroEntry = await getEntry("hero", "hero");
const heroData = heroEntry?.data || {
  title: "Discover Your Best Trip!",
  subtitle: "LET'S GO HOLIDAY",
  description:
    "Much of beautiful and refreshing places as you need to satisfy your best trip and make an amazing experience. Go explore our Packages.",
  images: {
    mainImageAlt: "Sunset in Amsterdam",
    secondaryImageAlt: "Sunset an water",
  },
};

// Load tour categories from CMS
const tourCategoriesEntry = await getEntry("tour-categories", "categories");
const tourCategoriesData = tourCategoriesEntry?.data?.categories || [];

// Load testimonials from CMS
const testimonialsEntry = await getEntry("testimonials", "testimonials");
const testimonialsData = testimonialsEntry?.data?.testimonials || [];

// Sample gallery images
const galleryImages = [
  {
    id: "1",
    src: "/assets/tour1.jpg",
    alt: t(
      "gallery_items.labuan_bajo.title",
      "Beautiful landscape of Labuan Bajo with crystal clear waters"
    ),
    title: t("gallery_items.labuan_bajo.title", "Labuan Bajo Paradise"),
    description: t(
      "gallery_items.labuan_bajo.description",
      "Experience the breathtaking beauty of Labuan Bajo's pristine waters and stunning landscapes"
    ),
    thumbnail: "/assets/tour1.jpg",
  },
  {
    id: "2",
    src: "/assets/tour2.jpg",
    alt: t(
      "gallery_items.beach_sunset.title",
      "Spectacular sunset over tropical beach"
    ),
    title: t("gallery_items.beach_sunset.title", "Tropical Sunset"),
    description: t(
      "gallery_items.beach_sunset.description",
      "Witness unforgettable sunsets on pristine tropical beaches with golden sand"
    ),
    thumbnail: "/assets/tour2.jpg",
  },
  {
    id: "3",
    src: "/assets/bike1.jpg",
    alt: t(
      "gallery_items.amsterdam_canals.title",
      "Historic Amsterdam canals with traditional architecture"
    ),
    title: t("gallery_items.amsterdam_canals.title", "Amsterdam Canals"),
    description: t(
      "gallery_items.amsterdam_canals.description",
      "Explore the historic charm of Amsterdam's iconic canals and traditional Dutch architecture"
    ),
    thumbnail: "/assets/bike1.jpg",
  },
  {
    id: "4",
    src: "/assets/mountain1.jpg",
    alt: t(
      "gallery_items.mountain_adventure.title",
      "Majestic mountain peaks and hiking trails"
    ),
    title: t("gallery_items.mountain_adventure.title", "Mountain Adventure"),
    description: t(
      "gallery_items.mountain_adventure.description",
      "Discover breathtaking mountain landscapes and thrilling hiking adventures"
    ),
    thumbnail: "/assets/mountain1.jpg",
  },
  {
    id: "5",
    src: "/assets/boat1.jpg",
    alt: t(
      "gallery_items.boat_tour.title",
      "Sailing boat on clear blue waters"
    ),
    title: t("gallery_items.boat_tour.title", "Island Hopping"),
    description: t(
      "gallery_items.boat_tour.description",
      "Sail through crystal clear waters and discover hidden islands and secluded beaches"
    ),
    thumbnail: "/assets/boat1.jpg",
  },
  {
    id: "6",
    src: "/images/canals1.jpg",
    alt: t(
      "gallery_items.cultural_sites.title",
      "Historic cultural landmarks and traditional architecture"
    ),
    title: t("gallery_items.cultural_sites.title", "Cultural Heritage"),
    description: t(
      "gallery_items.cultural_sites.description",
      "Immerse yourself in rich cultural heritage and explore historic landmarks"
    ),
    thumbnail: "/images/canals1.jpg",
  },
];

const ctaActions = [
  {
    label: t("actions.whatsapp", "Book via WhatsApp"),
    href: "https://wa.me/1234567890?text=Hi! I'm interested in booking a tour",
    variant: "primary" as const,
    size: "lg" as const,
    icon: MessageCircle,
  },
  {
    label: t("actions.instagram", "Follow on Instagram"),
    href: "https://instagram.com/jasmintours",
    variant: "outline" as const,
    size: "lg" as const,
    icon: Instagram,
  },
];
---

<IntlBaseLayout
  locale={locale}
  pageNS={["common", "ui", "home"]}
  seo={{
    title: t(
      "seo.title",
      "Jasmine Tours - Discover Amazing Travel Destinations | Book Your Adventure"
    ),
    description: t(
      "seo.description",
      "Explore breathtaking destinations with Jasmine Tours. Book your perfect adventure through WhatsApp or follow us on Instagram for travel inspiration."
    ),
  }}
>
  <!-- Hero Section -->
  <section class="relative">
    <Hero
      variant="split"
      subtitle={heroData.subtitle}
      title={heroData.title}
      description={heroData.description}
      images={heroData.images}
    />
  </section>

  <!-- Tour Filter Panel Section -->
  <section id="tours">
    <TourFilter t={t} tourCategories={tourCategoriesData} locale={locale} />
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials">
    <Testemonials t={t} testimonials={testimonialsData} />
  </section>

  <!-- Gallery Section -->
  <section class="py-20 bg-muted/30">
    <Container size="lg" padding="lg">
      <div class="text-center mb-16 animate-fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-6">
          {t("gallery.title", "Explore Amazing Destinations")}
        </h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          {
            t(
              "gallery.description",
              "Discover breathtaking landscapes, vibrant cultures, and unforgettable experiences from our curated travel destinations."
            )
          }
        </p>
      </div>

      <div class="animate-fade-up animate-delay-1">
        <ImageGallery
          images={galleryImages}
          columns={3}
          gap={24}
          showThumbnails={true}
          showCaption={true}
          showFullscreen={true}
          lazy={true}
          aspectRatio="landscape"
          className="mb-8"
        />
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section
    id="contact"
    class="bg-primary text-primary-foreground relative overflow-hidden"
  >
    <Container size="md" padding="xs" class="relative z-10">
      <CallToAction
        title={t("cta.title", "Ready for Your Next Adventure?")}
        subtitle={t(
          "cta.subtitle",
          "Connect with us to book your dream vacation"
        )}
        description={t(
          "cta.description",
          "Chat with us on WhatsApp for instant booking or follow our Instagram for daily travel inspiration and exclusive offers."
        )}
        actions={ctaActions}
        variant="default"
        backgroundColor="primary"
        class="animate-fade-up"
      />
    </Container>
  </section>
</IntlBaseLayout>
