    <TourFilter t={t} />
  </section>

  <!-- Testimonials Section -->
  <section id="testimonials">
    <Testemonials t={t} />
  </section>

  <!-- Gallery Section -->
  <section class="py-20 bg-muted/30">
    <Container size="lg" padding="lg">
      <div class="text-center mb-16 animate-fade-up">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-6">
          {t("gallery.title", "Explore Amazing Destinations")}
        </h2>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          {
            t(
              "gallery.description",
              "Discover breathtaking landscapes, vibrant cultures, and unforgettable experiences from our curated travel destinations."
            )
          }
        </p>
      </div>

      <div class="animate-fade-up animate-delay-1">
        <ImageGallery
          images={galleryImages}
          columns={3}
          gap={24}
          showThumbnails={true}
          showCaption={true}
          showFullscreen={true}
          lazy={true}
          aspectRatio="landscape"
          className="mb-8"
        />
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section
    id="contact"
    class="bg-primary text-primary-foreground relative overflow-hidden"
  >
    <Container size="md" padding="xs" class="relative z-10">
      <CallToAction
        title={t("cta.title", "Ready for Your Next Adventure?")}
        subtitle={t(
          "cta.subtitle",
          "Connect with us to book your dream vacation"
        )}
        description={t(
          "cta.description",
          "Chat with us on WhatsApp for instant booking or follow our Instagram for daily travel inspiration and exclusive offers."
        )}
        actions={ctaActions}
        variant="default"
        backgroundColor="primary"
        class="animate-fade-up"
      />
    </Container>
  </section>
</IntlBaseLayout>
