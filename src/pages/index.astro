---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Hero1 from "../components/Hero1.jsx";
import Main from "../components/Main.astro";
import Tours from "../components/Tours.astro";
// import Partners from "../components/Partners.jsx";
import toursData from "../data/ToursData";
import type { Tour } from "../types/tours";
---

<Layout title="Jasmine Tours & Events - Экскурсии в Амстердаме">
  <Navbar />
  <main>
    <Hero1 client:load />
    <Main />
    <div class="tours-section">
      <div class="container">
        <h2 class="tours-heading">Популярные туры</h2>
      </div>
      {toursData.map((tour: Tour) => <Tours tour={tour} />)}
    </div>
    <!-- <Partners client:only="react" /> -->
  </main>
  <Footer />
</Layout>

<style>
  main {
    width: 100%;
    overflow-x: hidden;
  }

  .tours-section {
    background-color: #fed9ed;
    padding: 4em 0;
  }

  .tours-heading {
    text-align: center;
    margin-bottom: 2em;
    font-size: 2.5rem;
  }

  @media (max-width: 768px) {
    .tours-section {
      padding: 2em 0;
    }

    .tours-heading {
      font-size: 2rem;
      margin-bottom: 1.5em;
    }
  }
</style>
